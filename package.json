    "ts-node": "^10.9.1",
    "tsx": "^3.6.0",
    "unplugin-vue-macros": "2.7.7",
    "vite-plugin-dts": "^3.7.0",
    "typescript": "^5.1.6",
    "vue": "3.4.0"
