    "consola": "^2.15.3",
    "eslint": "^8.47.0",
    "eslint-plugin-jsonc": "^2.3.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.18.1",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "lint-staged": "^15.1.0",
    "gulp": "^4.0.2",
    "lodash": "^4.17.21",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^4.9.1",
    "esbuild": "0.19.11",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-terser": "^7.0.2",
